{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Tambourine",
	"identifier": "com.kingstonkuan.tambourine",
	"version": "0.1.0",
	"build": {
		"beforeDevCommand": "pnpm dev:vite",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "pnpm build:vite",
		"frontendDist": "../dist"
	},
	"app": {
		"macOSPrivateApi": true,
		"withGlobalTauri": false,
		"windows": [
			{
				"title": "Tambourine",
				"label": "main",
				"width": 1280,
				"height": 720,
				"resizable": true,
				"fullscreen": false,
				"center": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"shortDescription": "Your personal voice interface for any app",
		"longDescription": "Your personal voice interface for any app. Speak naturally and your words appear wherever your cursor is, powered by customizable AI voice dictation.",
		"license": "AGPL-3.0",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"minimumSystemVersion": "10.13",
			"infoPlist": "./Info.plist"
		}
	}
}
